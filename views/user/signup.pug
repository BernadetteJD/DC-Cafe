extend ../layoutUser.pug 
 
block content
  div.container
    div.row
        div.col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
            div.panel.panel-default
                div.panel-body
                    include partials/messages.pug 
                        form(action = '/users/signup/' method = 'POST')
                            div.form-group
                                label Name
                                input.form-control(type="text",  name="name", id="name", placeholder="Enter your name", value=typeof name != 'undefined' ? name : ' ')
                            div.form-group
                                label Email Address
                                input.form-control(type="email",  name="email", id="email", placeholder="Enter your email", value=typeof email != 'undefined' ? email : ' ')
                            div.form-group
                                label Password
                                input.form-control(type="password",  name="password", id="password", placeholder="Create Password", value=typeof password != 'undefined' ? password : ' ')
                            div.form-group
                                label Confirm Password
                                input.form-control(type="password",  name="password2", id="password2", placeholder="Confirm Password", value=typeof password2 != 'undefined' ? password2 : ' ')
                            div.form-group
                                button.btn.btn-primary.btn-sm(type="submit") Sign Up
